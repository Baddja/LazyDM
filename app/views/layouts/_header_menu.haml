%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#header-menu-collapse', 'aria-expanded': 'false'}
        %span.sr-only
          Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Home', root_path, class: 'navbar-brand'

    #header-menu-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          = link_to 'LINK', '#'
      %ul.nav.navbar-nav.navbar-right
        - if @user_signed_in
          %li
            %p.navbar-btn
              = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-default'
        - else
          %li
            %p.navbar-btn
              = link_to 'Sign In', new_user_session_path,  class: 'btn btn-default'
          %li
            %p.navbar-text
              or
          %li
            %p.navbar-btn
              = link_to 'Register', new_user_registration_path, class: 'btn btn-default'
